  shortjournal = {J. Neurophysiol.},
  date = {1997-08},
  pages = {1062--1081},
  keywords = {Animals,Cues,Photic Stimulation,Memory,Analysis of Variance,Discrimination Learning,Entorhinal Cortex,Form Perception,Macaca mulatta,Reaction Time},
  author = {Suzuki, W. A. and Miller, E. K. and Desimone, R.},
  file = {/home/jgosmann/.zotero/zotero/g4y0i8zx.default/zotero/storage/BHRAFT6A/Suzuki et al_1997_Object and place memory in the macaque entorhinal cortex.pdf},
