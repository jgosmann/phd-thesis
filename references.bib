  pages = {84--92},
  keywords = {neural engineering framework,Auto-associative memory,Holographic reduced representation,verified,Vector symbolic architectures},
  author = {Stewart, Terrence C. and Tang, Yichuan and Eliasmith, Chris},
  file = {/home/jgosmann/.zotero/zotero/g4y0i8zx.default/zotero/storage/FAS55WM7/Stewart et al_2011_A biologically realistic cleanup memory.pdf;/home/jgosmann/.zotero/zotero/g4y0i8zx.default/zotero/storage/FEGQMRC6/S1389041710000525.html}
