  shortjournal = {Hippocampus},
  date = {2012-04},
  pages = {748--761},
  keywords = {Hippocampus,Animals,Humans,Algorithms,Mental Recall,Electrodes; Implanted,Memory; Episodic,Theta Rhythm,Dominance; Cerebral,Electrophysiological Phenomena},
  author = {Lega, Bradley C. and Jacobs, Joshua and Kahana, Michael},
  file = {/home/jgosmann/.zotero/zotero/g4y0i8zx.default/zotero/storage/FM6H9DM4/Human hippocampal theta oscillations and the formation of episodic memories -.pdf},
