  file = {/home/jgosmann/.zotero/zotero/g4y0i8zx.default/zotero/storage/67IK9S93/Bahl et al_2012_Automated optimization of a reduced layer 5 pyramidal cell model based on.pdf;/home/jgosmann/.zotero/zotero/g4y0i8zx.default/zotero/storage/V4QEMBEJ/S016502701200129X.html}
